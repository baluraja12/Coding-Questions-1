package streams;

import java.util.*;
import java.util.stream.Collectors;


public class OddAndEven {

	public static void main(String[] args) {

		List<Integer> listOfIntegers = Arrays.asList(1,2,3,4,5,6,7);
		
		Map<Boolean, List<Integer>> evenAndOdd = listOfIntegers.stream()
		.collect(Collectors.partitioningBy(i->i%2==0));
		
		System.out.println(evenAndOdd);
		
		List<Integer> oddNumber = listOfIntegers.get(false);
		List<Integer> Even = listOfIntegers.get(true);
		
		System.out.println("Even numbers :" + Even);
		System.out.println("Odd numbers :" + oddNumber);
		
	}

}
